<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('partials/head') %>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('partials/menu') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <div id="content-wrapper" class="d-flex flex-column">

                        <!-- Main Content -->
                        <div id="content">

                            <%- include('partials/topo') %>

                                <!-- Begin Page Content -->
                                <div class="container-fluid">
                                    <h2>Cadastrar venda</h2>
                                    <form method="post" action="/venda">
                                        <div class="form-group">
                                            <label for="nome">Nome da venda:</label>
                                            <input type="text" class="form-control" id="name" name="name" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="nome">Nome do vendedor:</label>
                                            <select class="form-control" id="functionary_id" name="functionary_id"
                                                required>
                                                <% functionaries.forEach(functionary=> { %>
                                                    <option value="<%= functionary.id %>">
                                                        <%= functionary.name %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label for="customer_id">Nome do cliente:</label>
                                            <select class="form-control" id="customer_id" name="customer_id" required>
                                                <% customers.forEach(customer=> { %>
                                                    <option value="<%= customer.id %>">
                                                        <%= customer.name%>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label for="marca">Produto:</label>
                                            <select class="form-control" id="product_id" name="product_id" required>
                                                <% products.forEach(product=> { %>
                                                    <option value="<%= product.id %>">
                                                        <%= product.name %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>

                                        <button class="btn btn-success" type="submit">Salvar</button>
                                    </form>
                                    <div class="form-group mt-5">
                                        <div class="text-center">
                                            <h1 class="mb-4">VENDAS</h1>
                                        </div>
                                        <table class="table table-striped table-hover">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th scope="col">Nome da venda</th>
                                                    <th scope="col">Nome do vendedor</th>
                                                    <th scope="col">Nome do cliente</th>
                                                    <th scope="col">Produto</th>
                                                    <th scope="col">Ação</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(sales.length> 0){ %>
                                                    <% sales.forEach(sale=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= sale.sale_name %>
                                                            </td>
                                                            <td>
                                                                <%= sale.functionary_name %>
                                                            </td>
                                                            <td>
                                                                <%= sale.customer_name %>
                                                            </td>
                                                            <td>
                                                                <%= sale.product_name %>
                                                            </td>
                                                            <td>
                                                                <form action="/venda/delete/<%= sale.sale_id %>"
                                                                    method="post" style="display:inline;">
                                                                    <button type="submit"
                                                                        class="btn btn-danger">Excluir</button>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                        <% }); } else {%>
                                            <tbody>
                                                <tr>
                                                    <td colspan="5"><b>Você não possui vendas!</b></td>
                                                </tr>
                                            </tbody>
                                            <% } %>
                                                </tbody>
                                        </table>
                                    </div>
                                </div>


                        </div>
                    </div>

                </div>
                <!-- End of Main Content -->

                <%- include('partials/footer')%>

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>

</html>